{
  "env": {
    "es6": true,
    "node": true,
    "react-native/react-native": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "prettier",
    "prettier/react",
    "@react-native-community"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "react-native"
  ],
  "rules": {
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "react/jsx-filename-extension": 0,
    "react/static-property-placement": [
      2,
      "static public field"
    ],
    "react/prefer-stateless-function": 0,
    "no-param-reassign": 0,
    "no-async-promise-executor": 0
  },
  "settings": {
    "import/resolver": {
      "babel-plugin-root-import": {
        "rootPathPrefix": "#/",
        "rootPathSuffix": "src"
      }
    }
  }
}